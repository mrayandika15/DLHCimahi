<!-- Modal -->
<div
  class="modal fade"
  id="add-modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Tambah Sungai</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/sungai" method="POST">
        <div class="modal-body">
          <div class="form-group">
            <label for="name">Kode Sungai</label>
            <input
              type="text"
              class="form-control"
              id="kodeSungai"
              name="kodeSungai"
              placeholder="Masukkan Kode Sungai"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Nama Sungai</label>
            <input
              type="text"
              class="form-control"
              id="namaSungai"
              name="namaSungai"
              placeholder="Masukkan Nama Sungai"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Wilayah Sungai</label>
            <input
              type="text"
              class="form-control"
              id="wilSungai"
              name="wilSungai"
              placeholder="Masukkan Wilayah Sungai"
              required
            />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-primary">Tambah</button>
        </div>
      </form>
    </div>
  </div>
</div>